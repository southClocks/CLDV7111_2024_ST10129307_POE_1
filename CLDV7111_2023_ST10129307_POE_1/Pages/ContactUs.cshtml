@page
@model CLDV7111_2023_ST10129307_POE_1.Pages.ContactUsModel
@{
    ViewData["Title"] = "Contact Us";
}
<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="contact-us-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Get in Touch</h2>
        <p class="text-center mb-5">We're here to help and answer any question you might have. We look forward to hearing from you.</p>
        
        <div class="row">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Your message here"></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <h3>Contact Details</h3>
                <p>If you prefer, you can reach us directly:</p>
                <p><strong>Email:</strong> eli.ize.dev@gmail.com</p>
                <p><strong>Phone:</strong> +2763 725 08 67</p>
                <p><strong>Address:</strong> 2nd floor Spaces building, Menlyn Maine, Pretoria</p>

                <h3>Follow Us</h3>
                <p>Stay updated with our latest collections and stories.</p>
                <p>
                    <a href="#" class="btn btn-social-icon btn-instagram"><i class="fa fa-instagram"></i></a>
                    <a href="#" class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i></a>
                </p>
            </div>
        </div>
    </div>
</div>


